{
    "version": 2,
    "builds": [
      { "src": "api/*.js", "use": "@vercel/node" },
      { "src": "build/**",     "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/token",           "dest": "/api/token.js" },
      { "src": "/recordingrules",  "dest": "/api/recordingrules.js" },
      { "src": "/(.*)",            "dest": "/build/$1" }
    ]
  }
  